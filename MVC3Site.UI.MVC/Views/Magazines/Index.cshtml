@model IEnumerable<MVC3Site.DATA.EF.Magazine>

@{
    ViewBag.Title = "Magazines";
}

<h2>@ViewBag.Title</h2>
<div id="searchPanel">
    @using (Html.BeginForm("Index", "Magazines", FormMethod.Get))
    {
        <div class="row">
            <div class="col-md-3 text-right" style="margin-top:.75em;">
                <label>Search Category: </label>
            </div>
            <div class="col-md-5">
                <input type="text" name="category" />
            </div>
            <div class="col-md-2">
                <input type="submit" class="main-button" value="Search" />
            </div>
            <div class="col-md-2">
                @Html.ActionLink("Reset", "Index", null, new { @class = "reset-button" })
            </div>
        </div>

    }<!--closing of the form-->


</div>

<p>
    @Html.ActionLink("Add New Magazine", "Create",null,new {@class="main-button" })
</p>
@if (Model.Count() == 0)
{
    <h3 class="text-center">Your search did not yield any results, please search again or click reset.</h3>
}
else
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MagazineTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssuesPerYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Circulation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishRate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Details",new { id=item.MagazineID})">
                    @Html.DisplayFor(modelItem => item.MagazineTitle)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssuesPerYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Circulation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishRate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MagazineID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MagazineID })
            </td>
        </tr>
    }

</table>
}